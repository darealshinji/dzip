#!/usr/bin/make -f


%:
	dh ${@} --parallel --with autoreconf

override_dh_auto_clean:
	dh_auto_clean
	rm -rf dzip-static dzip-static.1

override_dh_auto_configure:
	LDFLAGS="$(LDFLAGS) -static" dh_auto_configure
	cp dzip.1 dzip-static.1

override_dh_auto_build:
	dh_auto_build
	cp source/.libs/dzip dzip-static
	dh_auto_clean
	dh_auto_configure
	dh_auto_build

